<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="beanNameUrlHandlerMapping" class="org.springframework.web.servlet.handler.BeanNameUrlHandlerMapping"></bean>

    <bean id="/show2.do" class="kr.co.jhta.web.spring_web04.control.ShowController"></bean>
    <bean id="/index.do" class="kr.co.jhta.web.spring_web04.control.IndexController"></bean>
    <bean id="/menu.do" class="kr.co.jhta.web.spring_web04.control.MenuController"></bean>
    <bean id="/selectMenu.do" class="kr.co.jhta.web.spring_web04.control.SelectMenuController"></bean>

    <bean id="internalResourceViewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/views/"></property>
        <property name="suffix" value=".jsp"></property>
    </bean>

</beans>